<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.sonarsource.parent</groupId>
    <artifactId>parent</artifactId>
    <version>25</version>
  </parent>
  <groupId>com.sonarsource.dbcopy</groupId>
  <artifactId>sonar-db-copy</artifactId>
  <version>0.1-SNAPSHOT</version>
  <name>SonarQube Database Copy</name>
  <inceptionYear>2013</inceptionYear>

  <description>Carbon-copy SonarQube database</description>
  <properties>
    <maven.test.redirectTestOutputToFile>true</maven.test.redirectTestOutputToFile>
  </properties>

  <scm>
    <connection>scm:git:git@github.com:SonarSource/sonar-db-copy.git</connection>
    <developerConnection>scm:git:git@github.com:SonarSource/sonar-db-copy.git</developerConnection>
    <url>https://github.com/SonarSource/sonar-db-copy</url>
  </scm>

  <licenses>
    <license>
      <name>Commercial</name>
    </license>
  </licenses>

  <organization>
    <name>SonarSource</name>
    <url>http://www.sonarsource.com</url>
  </organization>

  <issueManagement>
    <system>jira</system>
    <url>http://jira.sonarsource.com/browse/SDBC</url>
  </issueManagement>

  <ciManagement>
    <system>jenkins</system>
    <url>http://jenkins.internal.sonarsource.com/job/ci-cs-db-copy</url>
  </ciManagement>

  <dependencies>
      <dependency>
          <groupId>postgresql</groupId>
          <artifactId>postgresql</artifactId>
          <version>9.1-901-1.jdbc4</version>
      </dependency>
    <!-- tests -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.easytesting</groupId>
      <artifactId>fest-assert</artifactId>
      <version>1.4</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.h2database</groupId>
      <artifactId>h2</artifactId>
      <version>1.3.172</version>
    </dependency>
    <dependency>
        <groupId>mysql</groupId>
        <artifactId>mysql-connector-java</artifactId>
        <version>5.1.27</version>
    </dependency>

  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>com.sonar.dbcopy.Main</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
